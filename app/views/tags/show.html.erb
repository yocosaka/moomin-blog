<h1>List for Tag: <%= @tag.name %></h1>
<% if @articles.any? %>
  <div class="articles">
    <% @articles.each do |article| %>
      <article class="articles__item">
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.body %></p>
      </article>
    <% end %>
  </div>
<% else %>
  <p>Not found any articles with Tag <%= @tag %></p>
<% end %>
