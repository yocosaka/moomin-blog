<div class="form">
  <%= form_for [ @article, @comment ],html: {class: 'form'} do |f| %>
  <div class="form__item">
    <%= f.label :author, "Your name", { class: 'form__label' } %>
    <%= f.text_field :author, { class: 'form__field'} %>
  </div>

  <div class="form__item">
    <%= f.label :body, "Comment", { class: 'form__label' } %>
    <%= f.text_area :body, { class: 'form__field'} %>
  </div>

  <div class="form__item">
    <%= f.submit class:'btn' %>
  </div>
  <% end %>
</div>
