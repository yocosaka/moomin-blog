<h1>Welcome Moomin Blog</h1>
<h2>All Articles</h2>

<%= link_to "Create new article", new_article_path, class: 'btn' %>

<div class="articles">
  <% if @articles.any? %>
  <article class="articles__item">
    <% @articles.each do |article| %>
      <h3><%= link_to  article.title, article_path(article) %></h3>
      <p><%= article.body %></p>
    <% end %>
  </article>
  <% end %>
</div>
