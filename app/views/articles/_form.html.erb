<%= render partial: "errors" %>
<%= form_with(model: @article, local: true, class: 'form') do |f| %>
  <div class="form__item">
    <%= f.label :title, { class: 'form__label' } %>
    <%= f.text_field :title,{ class:'form__field' } %>
  </div>

  <div class="form__item">
    <%= f.label :body, { class: 'form__label' } %>
    <%= f.text_area :body,{ class:'form__field' } %>
  </div>

  <div class="form__item">
    <%= f.label :tag_list, { class: 'form__label' } %>
    <%= f.text_field :tag_list,{ class:'form__field' } %>
  </div>

  <div class="form__item">
    <%= f.submit %>
  </div>
<% end %>
